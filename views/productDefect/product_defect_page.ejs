<%- include('../header') %>
<div class="row text-center">
    <div class="col-12">
        <h3>Audit Data </h3>
        <form class="d-flex ms-auto" action="/productDefects/product/search" method="get" >
            <input
              class="form-control me-2"
              type="number"
              name="keyword"
              placeholder="Search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
    </div>
    <div class="col-12 my-2">
        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Accusamus, eligendi? Quidem nobis architecto minima repudiandae deleniti beatae eaque accusantium nostrum ducimus odio. Ad excepturi sunt quo atque id, assumenda veniam!</p>
    </div>
    
    <div class="add">
        <a href="/productDefects/add" class="btn btn-outline-dark"><i class="fa-solid fa-square-plus"></i> Start Audit  </a>
    </div>
    <div class ="col-12 my-2">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <td>Index</td>
                    <td>ID</td>
                    <td>Product</td>
                    <td>Category</td>
                    <td>Defects</td>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < productsDefectsResult.length; i++) { %>
                    <% let defects = productsDefectsResult[i].defects %>
                    <tr>
                        <th><%= i + 1 %></th>
                        <th><%= productsDefectsResult[i].id %></th>
                        <th><%= productsDefectsResult[i].product_name %></th>
                        <th><%= productsDefectsResult[i].category %></th>
                        <th>
                            <% for(let j = 0; j < defects.length; j++) { %>
                              <%= defects[j].defect_name %>
                            <% } %>
                        </th>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include('../footer') %>