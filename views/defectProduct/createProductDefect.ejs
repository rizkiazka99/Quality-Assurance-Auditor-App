<%- include('../header') %>
<form action="/productDefects/add" method="post">
    <div class="mb-3">
        <label  class="form-label">Product Code</label> 
        <select name="productId" class="form-control">
            <% productDefects.forEach((item)=> { %>
                <option value="<%=item.productId%>"><%=item.productId%></option>
                <% }); %>
        </select>
    </div>
    <div class="mb-3">
        <label  class="form-label">Defect Code</label>
        <select name="defectId" class="form-control">
            <% productDefects.forEach((item)=> { %>
                <option value="<%=item.defectId%>"><%=item.defectId%></option>
                <% }); %>
        </select>
    </div>
      <button type="submit" class="btn btn-warning">Submit</button>
</form>
<%- include('../footer') %>