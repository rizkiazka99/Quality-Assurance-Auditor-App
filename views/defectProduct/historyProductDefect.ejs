<%- include('../header') %>
<div class="row text-center">
    <div class="col-12">
        <h3>History Defect</h3>
    </div>
    <div class="col-12 my-2">
        <p>See your audit results based on product, keep going to enhance our product</p>
    </div>
    <div class="title">
        <h5>
            <%= results.product_name %>

        </h5>
    </div>
    <div class ="col-12 my-2">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <tr>
                        <td>Defect ID</td>
                        <td>Defect Name</td>
                        <td>Type</td>
                        <td>Area</td>
                        <td>Suggestion</td>
                    </tr>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% results.defects.forEach(item =>{%>
                    <th><%= item.id %></th>
                    <th><%= item.defect_name %></th>
                    <th><%= item.type %></th>
                    <th><%= item. area %></th>
                    <th><%= item.suggestion %></th>
                </tr>
                <% })%>
            </tbody>
        </table>
    </div>
</div>
<%- include('../footer') %>