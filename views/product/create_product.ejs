<%- include('../header') %>
<form action="/products/add" method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="product_name" required>
        <label for="floatingInput">Product Name</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="category" required>
        <label for="floatingInput">Category</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="status" required>
        <label for="floatingInput">Status</label>
    </div>
    <% defects.forEach((defect) => { %>
    <div class="form-check form-switch">
        <input value="<%= defect.id %>" name="defectId" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault"><%= defect.defect_name %></label>
    </div>
    <% }) %>
    <button type="submit" class="btn btn-warning">Submit</button>
</form>
<%- include('../footer') %>