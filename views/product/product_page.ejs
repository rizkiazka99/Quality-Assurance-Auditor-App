<%- include('../header') %>
<div class="container">
<div class="row text-center">
    <div class="col-12">
        <h3>Product List</h3>
        <form class="d-flex ms-auto" action="/products/findByName/" method="get" >
            <input
              id="searchquery"
              class="form-control me-2"
              type="text"
              name="keyword"
              placeholder="Search"
            />
            <button class="btn btn-outline-warning" type="submit">
              Search
            </button>
        </form>
    </div>
    <div class="col-12 my-2">
        <p>Wanna take a look at all the products that you have? Feel like adding a new product? You're in the right place!</p>
    </div>
    <div class="add">
        <a href="/products/add" class="btn btn-outline-warning"><i class="fa-solid fa-square-plus"></i> Add Product</a>
    </div>
    <div class ="col-12 my-2">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <td>No.</td>
                    <td>Product ID</td>
                    <td>Product Name</td>
                    <td>Category</td>
                    <td>Status</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product , i) =>{%>
                <tr>
                    <th><%= i + 1 %></th>
                    <th><%= product.id %></th>
                    <th><%= product.product_name %></th>
                    <th><%= product.category %></th>
                    <th><%= product.status %></th>
                    <th>
                        <a href="/products/delete/<%= product.id %>" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                        <a href="/products/update/<%= product.id %>" class="btn btn-warning">
                            <i class="fa-solid fa-pencil"></i>
                        </a>
                    </th>
                </tr>
                <% })%>
            </tbody>
        </table>
    </div>
</div>
</div>
<%- include('../footer') %>